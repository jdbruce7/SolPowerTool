<Window x:Class="SolPowerTool.App.Views.DirtyReadonlyPromptView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DirtyReadonlyPromptView"
        Height="400"
        Width="400">
    <DockPanel>
        <Label DockPanel.Dock="Top"
               Content="These projects have changes and are read-only:"
               FontWeight="Bold" />
        <StackPanel DockPanel.Dock="Bottom"
                    Orientation="Horizontal"
                    Margin="0,0,0,10"
                    HorizontalAlignment="Right">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin"
                            Value="5" />
                    <Setter Property="Width"
                            Value="100" />
                </Style>
            </StackPanel.Resources>
            <Button Content="Make Writeable" Command="{Binding MakeWriteableCommand}" />
            <Button Content="Checkout" Command="{Binding CheckoutCommand}"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}"/>
        </StackPanel>
        <ListBox ItemsSource="{Binding Projects}"
                 Margin="10"
                 BorderBrush="Transparent"
                 DisplayMemberPath="ProjectName" />
    </DockPanel>
</Window>
